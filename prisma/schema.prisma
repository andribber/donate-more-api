// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider =  "sqlite"
  url      =  env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid())
  google_id       String?   @unique
  first_name      String    
  last_name       String    
  email           String    @unique
  created_at      DateTime  @default(now())
  enabled         Boolean   @default(true)
  phone_number    String    
  role            String      @default("USER")
  ads             Ad[]
  picture_url     String?   

  @@map("users")
}

model Ad {
  id                 String      @id @default(uuid())
  user_id            String
  category_id        String
  title              String      
  description        String      
  location           String      
  item_quantity      Int         @default(1)
  created_at         DateTime    @default(now())
  enabled            Boolean     @default(true)
  user               User        @relation(fields: [user_id], references: [id])
  category           Category    @relation(fields: [category_id], references: [id])
  images             Image[]

  @@map("Ads")
}

model Category {
  id            String    @id @default(uuid())
  name          String    
  description   String    
  enabled       Boolean   @default(true)
  created_at    DateTime  @default(now())
  ads           Ad[]

  @@map("Categories")
}

model Image {
  id              String    @id @default(uuid())
  ad_id           String
  content         String
  type            String
  name            String
  url             String
  position_order  Int
  created_at      DateTime  @default(now())
  ad              Ad        @relation(fields: [ad_id], references: [id])

  @@map("images")
}